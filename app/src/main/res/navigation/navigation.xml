<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/musicPlayerFragment">

    <fragment
        android:id="@+id/musicPlayerFragment"
        android:name="com.example.musicplayer.MusicPlayerFragment"
        android:label="MusicPlayerFragment" >
        <action
            android:id="@+id/action_musicPlayerFragment_to_playSongFragment2"
            app:destination="@id/playSongFragment" />
    </fragment>
    <fragment
        android:id="@+id/playSongFragment"
        android:name="com.example.musicplayer.PlaySongFragment"
        android:label="PlaySongFragment" >
        <argument
            android:name="uri"
            app:argType="android.net.Uri" />
    </fragment>
</navigation>